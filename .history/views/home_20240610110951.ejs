<!DOCTYPE html>
<html lang="vi">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Music Player</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
  <link rel="stylesheet" href="/css/home.css">
</head>

<body>
  <header>
    <nav>
      <!-- Your existing nav content -->
    </nav>
  </header>
  <main>
    <div id="track-list">
      <% tracks.forEach(function(track) { %>
        <div class="track-card">
          <h2>
            <%= track.track_name %>
          </h2>
          <p>
            <%= track.singer %>
          </p>
          <i class="fas fa-play-circle play-icon"
            onclick="addToPlaylistAndPlay('<%= track.track_name %>', '<%= track.singer %>', '<%= track.tracks_path %>')"></i>
          <i class="fas fa-ellipsis-v options-icon" onclick="toggleOptionsMenu(this)"></i>
          <div class="options-menu">
            <a href="#"
              onclick="addToPlaylist('<%= track.track_name %>', '<%= track.singer %>', '<%= track.tracks_path %>')">Thêm
              vào danh sách phát</a>
            <a href="#" onclick="confirmDeleteTrack(<%= track.id %>)">Xóa bài hát</a>
          </div>
        </div>
        <% }); %>
    </div>
  </main>
  <footer>
    <!-- Your existing footer content -->
  </footer>

  <div id="playlist-modal" class="modal">
    <div class="modal-content">
      <span class="close">&times;</span>
      <h2>Danh Sách Phát</h2>
      <ul id="playlist"></ul>
    </div>
  </div>

  <div id="add-song-modal" class="modal">
    <div class="modal-content">
      <span class="close">&times;</span>
      <h2>Thêm Bài Hát Mới</h2>
      <form id="add-song-form" enctype="multipart/form-data">
        <!-- Your existing form content -->
      </form>
    </div>
  </div>

  <!-- Popup xác nhận xóa -->
  <div id="delete-confirm-modal" class="modal">
    <div class="modal-content">
      <span class="close">&times;</span>
      <h2>Xác nhận xóa bài hát</h2>
      <p>Bạn có chắc chắn muốn xóa bài hát này không?</p>
      <button id="confirm-delete-btn">Xác nhận</button>
      <button id="cancel-delete-btn">Hủy</button>
    </div>
  </div>

  <script src="/js/main.js"></script>
</body>

</html>